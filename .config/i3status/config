general {
   colors = true
   color_good = "#859900"
   color_bad = "#dc322f"
   color_degraded = "#cb4b16"
   output_format = "i3bar"
   interval = 2
}

order += "disk /"
order += "load"
order += "cpu_usage 0"
order += "memory 0"
order += "tztime local"

tztime local {
        format = "%a %m-%d %l:%M:%S %p"
        timezone = "America/New_York"
}

